<div class="box">
    <!-- Colorbox for images on all pages -->
    <%= link_to (image_tag pin.image(:large)), pin.image(:large), data: { colorbox: true, colorbox_height: '640px', colorbox_width: '480px' } %>

    <p class="description">
        <%= pin.description %>
    </p>
    <p>
        <strong>
            Posted by <%= link_to pin.user.name, pin.user %>
        </strong>
    </p>
    <p>
    <% if current_user == pin.user %>
          <%= link_to 'Edit', edit_pin_path(pin), class: "btn btn-mini" %> |
          <%= link_to 'Delete', pin, class: "btn btn-mini btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %> |
    <% end %>
          <%= link_to 'Show', pin, class: "btn btn-mini btn-primary" %>
    </p>
</div>