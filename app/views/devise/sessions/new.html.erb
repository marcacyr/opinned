<div class="container-fluid">
	<div class="hero-unit span10">
		<div class="container-fixed">
			<div class="span4">	
				<h2>Login</h2>

				<%= minimal_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

				  <%= f.input :email %>
				  <%= f.input :password %>
				  <%= f.input :remember_me, inline_label: "Remember me", as: :boolean %>

				  
				    <%= f.submit "Sign in", class: "btn btn-primary" %>
				  
				<% end %>

				<%= render "devise/shared/links" %>
			</div>


		</div>
	</div>
</div>	